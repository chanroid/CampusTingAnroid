<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7ed9eb"
        android:padding="3dp" >

        <ImageButton
            android:id="@+id/matchingresultProfileBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/abc_ic_ab_back_holo_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="건물이름"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/matchingResultBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/com_facebook_picker_list_selector_disabled" />

        <LinearLayout
            android:id="@+id/matchingResultIdCardContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include
                android:id="@+id/matchingResultCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/fragment_idcard_card"
                android:background="#cccccc" />

            <include
                android:id="@+id/matchingResultCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/fragment_idcard_card"
                android:background="#cccccc" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>